{
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "terminal": {
    "shell": {
      "program": "fish"
    }
  },
  "languages": {
    "JavaScript": {
      "tab_size": 2
    },
    "TypeScript": {
      "tab_size": 2
    },
    "Svelte": {
      "tab_size": 2
    },
    "Rust": {
      "tab_size": 4
    }
  }
}
